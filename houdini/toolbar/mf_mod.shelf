    node = soptoolutils.genericTool(kwargs, 'mifth_edit_radial_falloff')

    bou = node.node('./bound1').geometry().boundingBox()
    bou_size = bou.sizevec()
    bou_min = bou.minvec()
    bou_max = bou.maxvec()
    bou_cr = bou.center()

